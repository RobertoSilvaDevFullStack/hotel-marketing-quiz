# Railway Environment Variables Template
# Copy this file to .env for local development

# PostgreSQL Database Connection String
# In Railway, this is automatically provided by the PostgreSQL plugin
# For local development, use your local PostgreSQL instance
DATABASE_URL=postgresql://user:password@localhost:5432/hotel_quiz

# Node Environment
# Set to 'production' in Railway, 'development' locally
NODE_ENV=development

# Server Port
# Railway sets this automatically, defaults to 3000 locally
PORT=3000

# Optional: Gemini API Key (if using AI features)
GEMINI_API_KEY=your_gemini_api_key_here
